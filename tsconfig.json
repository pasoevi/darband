{
    "compilerOptions": {
        "strict": true,
        "module": "esnext",
        "target": "es5",
        "baseUrl": "src",
        "sourceMap": true,
        "lib": ["es2019", "dom"],
        "moduleResolution": "node",
        "typeRoots" : [
            "node_modules/@types",
            "node_modules/jest-extended/types/**/*.d.ts",
            "src/types"
        ],
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "files": [
        "node_modules/jest-extended/types/index.d.ts"
    ]
}
